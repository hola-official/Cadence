{
  "name": "@cadenceprotocol/relayer",
  "version": "0.1.0",
  "description": "Cadence relayer service - indexes events, executes charges, sends webhooks",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "relayer": "./dist/bin/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "cli": "tsx bin/cli.ts",
    "db:migrate": "tsx bin/cli.ts db:migrate",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "pino": "^9.1.0",
    "pino-pretty": "^11.2.0",
    "postgres": "^3.4.4",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
